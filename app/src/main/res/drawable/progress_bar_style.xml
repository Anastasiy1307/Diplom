<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@+id/background">
    <shape>
        <gradient
            android:angle="270"
            android:startColor="#CDCEF0"
            android:centerColor="#CDCEF0"
            android:endColor="#CDCEF0"
          android:centerY="1.0"
            />
        <corners android:radius="10dp"/>
    </shape>
</item>
    <item android:id="@+id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#606287"
                    android:centerColor="#606287"
                    android:endColor="#606287"
                    android:useLevel="false"/>
                <corners android:radius="10dp"/>
            </shape>
        </clip>
    </item>
</layer-list>