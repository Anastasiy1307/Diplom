<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B5E7"
    tools:context=".LogIn_student">


    <TextView
        android:id="@+id/textView"
        android:layout_width="396dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"

        android:fontFamily="@font/lora"
        android:text="Авторизация"
        android:textColor="#606287"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/Group"
        android:layout_width="620dp"
        android:layout_height="80dp"
        android:layout_marginTop="192dp"
        android:backgroundTint="#606287"

        android:fontFamily="@font/lora"
        android:hint="Введите группу"
        android:textAlignment="viewStart"
        android:textColor="#606287"
        android:textColorHighlight="#606287"
        android:textColorHint=" #606287"
        android:textColorLink="#606287"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/Login"
        android:layout_width="660dp"
        android:layout_height="100dp"
        android:layout_marginStart="65dp"

        android:layout_marginEnd="65dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#606287"

        android:fontFamily="@font/lora"
        android:text="Войти"
        android:textColor="#D0D1F0"
        android:textColorHighlight="#D0D1F0"

        android:textColorLink="#D0D1F0"
        android:textSize="30sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Group"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#8082B4"
        app:shapeAppearanceOverlay="@style/Round" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="235dp"
        android:layout_height="213dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>