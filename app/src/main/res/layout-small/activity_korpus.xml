<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B5E7"
    tools:context=".Korpus">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/korpus_img"
        android:layout_width="203dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"

        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Round"
        app:srcCompat="@drawable/nophoto" />

    <Button
        android:id="@+id/result_korp"
        android:layout_width="286dp"
        android:layout_height="44dp"

        android:layout_marginTop="48dp"
        android:backgroundTint="#606287"
        android:fontFamily="@font/lora"
        android:text="Результаты по корпусу"

        android:textColor="#D0D1F0"
        android:textColorHighlight="#D0D1F0"
        android:textColorLink="#D0D1F0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/korpus_img"
        app:rippleColor="#8082B4" />

    <Button
        android:id="@+id/result_group"
        android:layout_width="286dp"
        android:layout_height="44dp"

        android:layout_marginTop="20dp"
        android:backgroundTint="#606287"
        android:fontFamily="@font/lora"
        android:text="Результаты по группам"
        android:textColor="#D0D1F0"

        android:textColorHighlight="#D0D1F0"
        android:textColorLink="#D0D1F0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_korp"
        app:rippleColor="#8082B4" />

</androidx.constraintlayout.widget.ConstraintLayout>