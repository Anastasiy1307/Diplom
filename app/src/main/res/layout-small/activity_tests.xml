<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B5E7"
    tools:context=".Tests">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="77dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
    <ScrollView
        android:layout_below="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="202dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/corn"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/name"
            android:layout_width="123dp"
            android:layout_height="39dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/Progress"
            android:fontFamily="@font/lora"
            android:text="Профессиональный\nрост и мотивация"
            android:textColor="#606287"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/Progress"
            android:layout_width="91dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="17dp"
            app:srcCompat="@drawable/progress" />

        <TextView
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="1dp"
            android:fontFamily="@font/lora"
            android:text="Отметьте напротив\n каждого утвержения\n степень вашего согласия с ним"
            android:textColor="#606287"
            android:textSize="10dp" />

        <Button
            android:layout_width="233dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="123dp"
            android:layout_marginEnd="9dp"
            android:backgroundTint="#606287"
            android:fontFamily="@font/lora"
            android:text="Начать тестирование"
            android:textColor="#D0D1F0"
            android:textSize="11dp" />


    </RelativeLayout>
    </ScrollView>
</RelativeLayout>