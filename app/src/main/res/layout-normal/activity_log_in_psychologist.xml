<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B5E7"
    tools:context=".LogIn_psychologist">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"

        android:fontFamily="@font/lora"
        android:text="Авторизация"
        android:textColor="#606287"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/password"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#606287"

        android:fontFamily="@font/lora"
        android:hint="Пароль"
        android:textAlignment="viewStart"
        android:textColor="#606287"
        android:textColorHighlight="#606287"
        android:textColorHint="#606287"
        android:textColorLink="#606287"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogIn" />

    <EditText
        android:id="@+id/LogIn"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#606287"

        android:fontFamily="@font/lora"
        android:hint="Логин"
        android:textAlignment="viewStart"
        android:textColor="#606287"
        android:textColorHighlight="#606287"
        android:textColorHint=" #606287"
        android:textColorLink="#606287"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/Login"
        android:layout_width="281dp"
        android:layout_height="56dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="100dp"

        android:backgroundTint="#606287"
        android:fontFamily="@font/lora"
        android:text="Войти"

        android:textColor="#D0D1F0"
        android:textColorHighlight="#D0D1F0"
        android:textColorLink="#D0D1F0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.989"
        app:rippleColor="#8082B4" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="110dp"
        android:layout_height="115dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/nazad"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        android:onClick="Back"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>