<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maska_Questions">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/corn"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/lora"
            android:text="1. Я считаю, что профессия, которую я получаю - имеет большое значение для общества."
            android:textColor="#606287"

            android:textSize="14sp" />
        <RadioGroup
            android:id="@+id/RG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q1">
            <RadioButton
                android:id="@+id/answ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Неверно"
                android:fontFamily="@font/lora"
                android:textColor="#606287"
                android:textSize="11sp"/>
            <RadioButton
                android:id="@+id/answ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Скорее неверно"
                android:textSize="11sp"
                android:textColor="#606287"
                android:fontFamily="@font/lora"/>
           <RadioButton
            android:id="@+id/answ3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Иногда верно"
            android:textSize="11sp"
            android:textColor="#606287"
            android:fontFamily="@font/lora"/>

            <RadioButton
                android:id="@+id/answ4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Скорее верно"
                android:textSize="11sp"
                android:textColor="#606287"
                android:fontFamily="@font/lora"/>
            <RadioButton
                android:id="@+id/answ5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Верно"
                android:textSize="11sp"
                android:textColor="#606287"
                android:fontFamily="@font/lora"/>

        </RadioGroup>


    </RelativeLayout>



</LinearLayout>