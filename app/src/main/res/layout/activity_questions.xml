<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#B3B5E7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questions">

    <RelativeLayout
        android:id="@+id/RL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RL"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/nameTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lora"
            android:gravity="center"
            android:text="Название теста"
            android:textColor="#606287"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RLL"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/RL1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center">

    <ProgressBar
            android:id="@+id/progresss"
            android:layout_marginTop="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"

            android:layout_width="300dp"
            android:layout_height="15dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_bar_style"
            android:progress="0"
            android:max="20">
        </ProgressBar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/progresss"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:text="0%"
            android:fontFamily="@font/lora"
            android:textColor="#606287"
            android:textSize="15dp"/>



    </RelativeLayout>

    <ScrollView
        android:id="@+id/Sv"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@id/logo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/corn"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/Progress"
                    android:fontFamily="@font/lora"
                    android:text="Профессиональный рост и мотивация"
                    android:textColor="#606287"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/Progress"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    app:srcCompat="@drawable/progress" />

                <TextView
                    android:id="@+id/Short"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/lora"
                    android:layout_below="@id/name"
                    android:text="Отметьте напротив каждого утвержения степень вашего согласия с ним"
                    android:textColor="#606287"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/prim"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/Short"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#606287"
                    android:fontFamily="@font/lora"
                    android:text="Начать тестирование"
                    android:textColor="#D0D1F0"
                    android:textSize="11dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/corn"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/Progress1"
                    android:fontFamily="@font/lora"
                    android:text="Шкалирование по Томасу"
                    android:textColor="#606287"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/Progress1"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    app:srcCompat="@drawable/scal" />

                <TextView
                    android:id="@+id/Short1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/lora"
                    android:layout_below="@id/name1"
                    android:text="Отметьте напротив каждого утвержения степень вашего согласия с ним"
                    android:textColor="#606287"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/hpt"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/Short1"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#606287"
                    android:fontFamily="@font/lora"
                    android:text="Начать тестирование"
                    android:textColor="#D0D1F0"
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/corn"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/Progress2"
                    android:fontFamily="@font/lora"
                    android:text="Самооценка уровня творческой активности воспитанников"
                    android:textColor="#606287"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/Progress2"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    app:srcCompat="@drawable/bulb" />

                <TextView
                    android:id="@+id/Short2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/lora"
                    android:layout_below="@id/name2"
                    android:text="Отметьте напротив каждого утвержения степень вашего согласия с ним"
                    android:textColor="#606287"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/sytav"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/Short2"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#606287"
                    android:fontFamily="@font/lora"
                    android:text="Начать тестирование"
                    android:textColor="#D0D1F0"
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/corn"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/Progress3"
                    android:fontFamily="@font/lora"
                    android:text="Самооценка уровня творческой активности воспитанников"
                    android:textColor="#606287"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/Progress3"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    app:srcCompat="@drawable/list" />

                <TextView
                    android:id="@+id/Short3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/lora"
                    android:layout_below="@id/name3"
                    android:text="На каждый из вопросов следует ответить Да или Нет"
                    android:textColor="#606287"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/okios"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/Short3"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#606287"
                    android:fontFamily="@font/lora"
                    android:text="Начать тестирование"
                    android:textColor="#D0D1F0"
                    android:textSize="11dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/Sv"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Завершить тест"
            android:fontFamily="@font/lora"
            android:textSize="18dp"
            android:textColor="#D0D1F0"
            android:backgroundTint="#606287"/>

    </RelativeLayout>

</LinearLayout>